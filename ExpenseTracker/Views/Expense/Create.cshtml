@model ExpenseTracker.Models.ViewModels.ExpenseVM

<form method="post" asp-action="Create">
    <div class="border p-3 mt-4">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-white-50 pl-3">Add Expense</h2> 
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Expense.CatagoryModel"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Expense.ExpenseName"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Expense.ExpenseDate"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Expense.Amount"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <select asp-for="Expense.CatagoryId" asp-items="@Model.CatagoryDropDown" class="form-control">
                            <option selected>--Select Expense Catagory--</option>
                        </select>
                        <span asp-validation-for="Expense.CatagoryId" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="Expense.ExpenseName" class="form-control" />
                        <span asp-validation-for="Expense.ExpenseName" class="text-danger"></span>
                    </div>

                    <div class="col-3">
                        <input asp-for="Expense.ExpenseDate" class="form-control" />
                        <span asp-validation-for="Expense.ExpenseDate" class="text-danger"></span>
                    </div>

                    <div class="col-3">
                        <input asp-for="Expense.Amount" class="form-control" />
                        <span asp-validation-for="Expense.Amount" class="text-danger"></span>
                    </div>
                   
                </div>

                <div class="mb-3"> </div>

                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col offset-3">
                          
                        </div>
                        <div class="col">
                          
                        </div>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-primary w-100" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <a asp-action="Index" class="btn btn-secondary  w-100">View All</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

<div class="container">
    <span>Total Expense Catagory List: @Model.CatagoryDropDown.Count()</span>

</div>

@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial" />}
}

