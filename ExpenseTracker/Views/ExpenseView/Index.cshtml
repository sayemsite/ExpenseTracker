@model ExpenseTracker.Models.ViewModels.ExpenseVM

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<div>
    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Expense.CatagoryModel"></label>
                </div>
                <div class="col-3">
                    <label>Date From : </label>
                    @*<label asp-for="Expense.ExpenseDate"></label>*@
                </div>
                <div class="col-3">
                    <label>TO Date : </label>
                    @*<label asp-for="Expense.ExpenseDate"></label>*@
                </div>
                <div class="col-3">
                   @* <label asp-for="Expense.Amount"></label>*@
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <select asp-for="CatagoryId" asp-items="@Model.CatagoryDropDown" class="form-control">
                        <option selected>--Select Expense Catagory--</option>
                    </select>
                    <span asp-validation-for="CatagoryId" class="text-danger"></span>
                </div>
                <div class="col-3">
                    
                    <input asp-for="ExpenseDateFrom" class="form-control" />
                    <span asp-validation-for="ExpenseDateFrom" class="text-danger"></span>
                </div>

                <div class="col-3">
                    
                    <input asp-for="ExpenseDateTo" class="form-control" />
                    <span asp-validation-for="ExpenseDateTo" class="text-danger"></span>
                </div>

                <div class="col-3">

                    
                    @*<input asp-for="Expense.Amount" class="form-control" />
                    <span asp-validation-for="Expense.Amount" class="text-danger"></span>*@
                    <div class="w-100 btn-group" role="group">
                        <a asp-controller="ExpenseView" asp-action="GetDataBetweenTwoDates" asp-route-Id="@Model.CatagoryName" class="btn btn-primary mx-1">Search Expense</a>
                    </div>
                   
                    @*<input type="submit" value="Search Expense" class="btn btn-primary w-100" />*@
                </div>

            </div>

            <div class="mb-3"> </div>

            <div class="form-group row">
                <div class="col-8 offset-2 row">
                    <div class="col offset-3">
                    </div>
                    <div class="col">
                    </div>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-6">
                    <div class="form-group">
                       @* <input type="submit" value="Search Expense" class="btn btn-primary w-100" />*@
                    </div>
                </div>
                <div class="col-md-6">
                   @* <a asp-action="Index" class="btn btn-secondary  w-100">View All</a>*@
                </div>
            </div>

        </div>
    </div>
</div>
<div>

</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Expense.CatagoryModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ExpenseList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CatagoryModel.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpenseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpenseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
