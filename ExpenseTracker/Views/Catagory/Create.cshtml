@model ExpenseTracker.Models.Catagory

<form method="post" asp-action="Create">
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-white-50 pl-3">Add Expense Catagory</h2>
        </div>


        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <p class="align-middle"> Input your any Expense Catagory in this text box. Like - “House Rent”, “Water Bill”, “Electric Bill”, “Groceries”, “Uber”, “Medications” etc. Remember, Expense Catagory Name must be unique.</p>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        
                    </div>

                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Name"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                   
                </div>

                <div class="mb-3"> </div>

                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <br/>
   
    <div>
        @if (@TempData["CatagoryActionResult"] is not null)
        {
            <p class="font-weight-bold bg-danger text-black"> The Catagory Name "@TempData["newCatagoryName"]" exists in DB. Give a unique name. </p>
        }
    </div>
    
</form>

@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial" />}
}

